                                 referencedTableName="customer"/>

        <addForeignKeyConstraint baseColumnNames="shared_dinner_id"
                                 baseTableName="rel_customer__shared_dinner"
                                 constraintName="fk_rel_customer__shared_dinner__shared_dinner_id"
                                 referencedColumnNames="id"
